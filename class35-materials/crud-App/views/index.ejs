<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD Operations</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body class="container">
    <h1 class="display-3 my-3">CRUD Application</h1>
   <section class="row">
    <form class="col-md-4" action="/quotes" method="post">
        <div class="mb-3">

            <input class="form-control" type="text" name="name" placeholder="name">
        </div>
        <div class="mb-3">

            <input class="form-control" type="text" name="quote"  placeholder="quote">
        </div>
        <button  class="btn btn-primary mt-4" type="submit">Submit</button>
    </form>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h2>Darth Vader invades!</h2>
        <p>Replace first Yoda's quote with a quote written by Darth Vader</p>
        <button class="btn btn-success" id="update-button">Replace Yoda's quote</button>
            </div>
            </div>
        </div>
       
      </div>
      <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h2>Remove Darth Vader!</h2>
                <p>
                  Delete one Darth Vader's quote. Does nothing if there are no more Darth
                  Vader's quote
                </p>
                <button class="btn btn-danger" type="button" id="delete-button">Delete Darth Vader's quote</button>
                <p id="message"></p>
            </div>
        </div>
       
      </div>
   
   </section>


   <ul  class="list-group">
    <%for(let i=0; i<quotes.length; i++){%>
        <li class="list-group-item">
            <h3><%= quotes[i].name %></h3>
            <p><%= quotes[i].quote %></p>
            </li>
    <%}%>
   </section>

  
<script src="/main.js"></script>
   
</body>
</html>